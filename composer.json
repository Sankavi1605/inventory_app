{
    "name": "constructstock/inventory",
    "description": "ConstructStock inventory and equipment management portal",
    "type": "project",
    "require": {
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "classmap": [
            "app/libraries",
            "app/models",
            "app/controllers"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}